<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--形狀-->

    <!--內容-->
    <solid android:color="#81D8D0"

        />

    <!--邊框-->
    <stroke
        android:width="5dp"
        android:color="#0099CC33"
        />

    <!--內容物件的距離-->
    <padding
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp"
        />

    <!--框角矩形的程度-->
    <corners android:radius="10dp" />
</shape>
